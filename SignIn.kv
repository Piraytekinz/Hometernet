<SignInScreen>:
    RelativeLayout:
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            MDIconButton:
                icon: 'arrow-left'
                on_press: app.switch_home()
        MDBoxLayout:
            orientation: 'vertical'
            padding: [25,35,25,35]
            spacing: "20dp"
            MDBoxLayout:
                size_hint: None, None
                height: pirate.height + 50
                width: pirate.width + 50
                padding: [self.width/2,self.height/2,self.width/2,self.height/2]
                md_bg_color: 1,0,0,1
                pos_hint: {'center_x': 0.5}
                MDIcon:
                    icon: 'pirate'
                    id: pirate
                    font_size: '50dp'

            MDLabel:
                font_size: "30dp"
                text: 'Sign in to Homiz'
                halign: 'center'
                size_hint_y: None
                adaptive_height: True
                id: notice
                md_bg_color: 1,0,0,1

            MDBoxLayout:
                orientation: 'vertical'
                spacing: "20dp"
                Email:
                    size_hint_y: None
                    height: notice.height + 20
                    radius: [10,]
                    TextInput:
                        hint_text: 'email'
                        multiline: False
                        foreground_color: 0/255, 0/255, 0/255, 1
                        size_hint_y: None
                        font_size: "15dp"
                        text_color: "black"
                        pos_hint: {'center_y': 0.5}
                        height: self.minimum_height
                        background_color: 0,0,0,0

                Password:
                    size_hint_y: None
                    height: notice.height + 20
                    radius: [10,]
                    id: passwrd
                    TextInput:
                        hint_text: 'password'
                        multiline: False
                        foreground_color: 0/255, 0/255, 0/255, 1
                        size_hint_y: None
                        font_size: "15dp"
                        text_color: "black"
                        pos_hint: {'center_y': 0.5}
                        height: self.minimum_height
                        background_color: 0,0,0,0

            MDBoxLayout:
                size_hint_y: None
                adaptive_height: True
                MDTextButton:
                    text: 'Forgot password?'
                    size_hint_y: None
                    adaptive_height: True
                    font_size: '16dp'
                    color: app.theme_cls.primary_color
                    

            MDCard:
                radius: [10]
                md_bg_color: app.theme_cls.primary_color
                ripple_behavior: True
                size_hint_y: None
                height: passwrd.height
                MDLabel:
                    text: 'Login'
                    halign: 'center'
                    font_size: '15dp'
                    color: 'white'
            MDBoxLayout:
                
                MDLabel:
                    text: "Don't have an account?"
                    size_hint_y: None
                    adaptive_height: True
                MDTextButton:
                    text: 'sign up'
                    size_hint_y: None
                    adaptive_height: True
                    font_size: '16dp'
                    color: app.theme_cls.primary_color
                    size_hint_y: None
                    adaptive_height: True
                    on_press: app.switch_signup()
                    id: sign_up


<Email@MDCard+CommonElevationBehavior>
<Password@MDCard+CommonElevationBehavior>
            

        
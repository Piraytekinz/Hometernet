<ContactScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        
        MDCard:
            size_hint_y: None
            height: "70dp"
            padding: [10,0,0,0]
            elevation: 0
            id: about
            radius: [0]
            MDLabel:
                text: 'Contact Us'
                font_size: '16dp'
                bold: True
                size_hint_y: None
                adaptive_height: True
                valign: 'center'
                pos_hint: {'center_y': 0.5}
                
            MDIconButton:
                icon_size: "20dp"
                icon: 'arrow-right'
                on_press: app.play()
                on_release: app.switch_home()
                pos_hint: {'center_y': 0.5}
                id: icon

        MDSeparator:
            color: 0.9,0.9,0.9,0.4
        
        ScrollView:
            effect_cls: "ScrollEffect"
            MDBoxLayout:
                padding: [15,'20dp',15,18]
                spacing: "35dp"
                orientation: 'vertical'
                size_hint_y: None
                adaptive_height: True
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "15dp"
                    MDLabel:
                        text: 'Contact Us'
                        bold: True
                        font_size: '25dp'
                        id: notice
                        size_hint_y: None
                        adaptive_height: True
                    MDLabel:
                        text: 'Tell us you story from your experience.'
                        font_size: '15dp'
                        color: 'gray'
                        size_hint_y: None
                        adaptive_height: True
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "30dp"
                    MDBoxLayout:
                        spacing: "23dp"
                        size_hint_y: None
                        adaptive_height: True
                        MDBoxLayout:
                            orientation: 'vertical'
                            spacing: "10dp"
                            size_hint_y: None
                            adaptive_height: True
                            MDLabel:
                                text: "First name"
                                size_hint_y: None
                                adaptive_height: True
                                font_size: '14dp'
                            Firstname:
                                size_hint_y: None
                                height: "45dp"
                                radius: ["10dp",]
                                id: name_box
                                on_release: firstname.focused=True
                                TextInput:
                                    hint_text: 'First name'
                                    multiline: False
                                    foreground_color: 0/255, 0/255, 0/255, 1
                                    size_hint_y: None
                                    font_size: "15dp"
                                    text_color: "black"
                                    pos_hint: {'center_y': 0.5}
                                    height: self.minimum_height
                                    background_color: 0,0,0,0
                                    id: firstname
                                    input_type: 'text'
                                    cursor_color: 0,0,1,1

                        MDBoxLayout:
                            orientation: 'vertical'
                            spacing: "10dp"
                            size_hint_y: None
                            adaptive_height: True
                            MDLabel:
                                text: "Last name"
                                font_size: '14dp'
                                size_hint_y: None
                                adaptive_height: True
                            Lastname:
                                size_hint_y: None
                                height: "45dp"
                                radius: ["10dp",]
                                id: last_name_box
                                on_release: lastname.focused=True
                                TextInput:
                                    hint_text: 'Last name'
                                    multiline: False
                                    foreground_color: 0/255, 0/255, 0/255, 1
                                    size_hint_y: None
                                    font_size: "15dp"
                                    text_color: "black"
                                    pos_hint: {'center_y': 0.5}
                                    height: self.minimum_height
                                    background_color: 0,0,0,0
                                    id: lastname
                                    input_type: 'text'
                                    cursor_color: 0,0,1,1
                    MDBoxLayout:
                        orientation: 'vertical'
                        spacing: "10dp"
                        size_hint_y: None
                        adaptive_height: True
                        MDLabel:
                            text: "Email"
                            font_size: '14dp'
                            size_hint_y: None
                            adaptive_height: True
                        MailCard:
                            size_hint_y: None
                            height: "45dp"
                            radius: ["10dp",]
                            id: mail_box
                            on_release: mail.focused=True
                            TextInput:
                                hint_text: 'Email'
                                multiline: False
                                foreground_color: 0/255, 0/255, 0/255, 1
                                size_hint_y: None
                                font_size: "15dp"
                                text_color: "black"
                                pos_hint: {'center_y': 0.5}
                                height: self.minimum_height
                                background_color: 0,0,0,0
                                id: mail
                                input_type: 'mail'
                                cursor_color: 0,0,1,1
                    MDBoxLayout:
                        orientation: 'vertical'
                        spacing: "10dp"
                        size_hint_y: None
                        adaptive_height: True
                        MDLabel:
                            text: "Message"
                            font_size: '14dp'
                            size_hint_y: None
                            adaptive_height: True
                        MessageCard:
                            size_hint_y: None
                            height: notice.height * 5
                            radius: ["10dp",]
                            id: story_box
                            on_release: message.focused=True
                            TextInput:
                                hint_text: 'Input Message'
                                multiline: True
                                foreground_color: 0/255, 0/255, 0/255, 1
                                input_type: 'text'
                                font_size: "15dp"
                                text_color: "black"
                                pos_hint: {'center_y': 0.5}
                                cursor_color: 0,0,1,1
                                background_color: 0,0,0,0
                                id: message
                SendCard:
                    size_hint_y: None
                    height: send.height * 3
                    radius: ['5dp']
                    ripple_behavior: True
                    md_bg_color: app.theme_cls.primary_color
                    on_press: app.sound()
                    on_release: app.thread_initialize_contact_message()
                    id: send_card
                    RelativeLayout:
                        MDLabel:
                            text: "Send"
                            font_size: '13dp'
                            color: 'white'
                            halign: 'center'
                            id: send
                            size_hint_y: None
                            adaptive_height: True
                            bold: True
                            pos_hint: {'center_y': 0.5}
                            
                        MDSpinner:
                            color: "white"
                            # font_size: '13dp'
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            size_hint: None, None
                            height: '13dp'
                            width: '13dp'
                            active: False
                            id: spin

<Firstname@MDCard+CommonElevationBehavior>
<Lastname@MDCard+CommonElevationBehavior>
<MailCard@MDCard+CommonElevationBehavior>
<MessageCard@MDCard+CommonElevationBehavior>
<SendCard@MDCard+CommonElevationBehavior>
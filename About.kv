<AboutScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        AboutCard:
            size_hint_y: None
            height: icon.height * 2.2
            padding: [10,]
            elevation: 0
            id: about
            MDLabel:
                text: 'About'
                theme_font_style: 'Overline'
                size_hint_y: None
                adaptive_height: True
                valign: 'center'
                pos_hint: {'center_y': 0.5}
                
            MDIconButton:
                font_size: '15dp'
                icon: 'arrow-right'
                on_press: app.play()
                on_release: app.switch_home()
                pos_hint: {'center_y': 0.5}
                id: icon
        MDBoxLayout:
            ScrollView:
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "30dp"
                    padding: [20,]
                    orientation: 'vertical'
                    MDLabel:
                        text: "About Hometernet"
                        bold: True
                        font_size: '30dp'
                        size_hint_y: None
                        height: about.height
                        halign: 'center'
                    MDLabel:
                        text: "Hometernet is a global platform for real estate. \n Seeking to promote global integration, by providing you with services to advertise your properties across the globe. Help build this community by co-operating with us through your use of Hometernet."
                        
                        
                        font_size: '17dp'
                        halign: 'center'

<AboutCard@MDCard+CommonElevationBehavior>
<SearchScreen>:
    on_enter: prop_type.focused = True if check.opacity == 0 else False
    ScrollView:
        bar_width: 0
        effect_cls: "ScrollEffect"
        scroll_distance: 1
        smooth_scroll_end: 30
        scroll_wheel_distance: 50
        scroll_timeout: 1000
        do_scroll_x: False
        id: searcher
        on_scroll_move: app.scroll_searcher()
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            adaptive_height: True
            spacing: "20dp"
            padding: ["10dp"]
            MDBoxLayout:
                size_hint_y: None
                height: '60dp'
                spacing: "10dp"
                MDIconButton:
                    icon: 'arrow-left'
                    icon_size: "25dp"
                    pos_hint: {'center_y': 0.5}
                    on_press: app.play()
                    on_release: app.switch_home()
                    bold: True
                    md_bg_color: 1,1,1,1

                MDLabel:
                    text: "Search"
                    font_size: '25dp'
                    bold: True
                    # halign: 'center'
                    theme_font_style: 'Overline'
                    size_hint_y: None
                    adaptive_height: True
                    pos_hint: {'center_y':0.5}

                MDIconButton:
                    icon: 'magnify'
                    pos_hint: {'center_y': 0.5}
                    icon_size: "25dp"
                    bold: True
                    on_press: app.play()
                    on_release: app.search_thread(drop_item.text, country.text, state.text, town.text, bed_item.text, prop_type.text)
                    id: searchido
                    md_bg_color: 1,1,1,1

            
            MDGridLayout:
                cols: 2
                size_hint_y: None
                adaptive_height: True
                spacing: "20dp"
                
                ChooseCard:
                    radius: ["10dp"]
                    size_hint: None, None
                    width: "130dp"
                    
                    padding: [10,0,0,0]
                    id: sale_or_rent
                    height: "55dp"
                    MDLabel:
                        text: "For: "
                        size_hint: None, None
                        adaptive_size: True
                        halign: 'center'
                        color: 'gray'
                        font_size: '15dp'
                        id: for_text
                        pos_hint: {'center_y': 0.5}
                    MDDropDownItem:
                        id: drop_item
                        text: 'Sale'
                        size_hint_y: None
                        adaptive_height: True
                        on_press: 
                            app.play()
                            app.laaa(True)
                        on_release: 
                            app.sale_rent_choice()
                        pos_hint: {'center_y': 0.5}
                        font_size: '14dp'
                BedCard:
                    radius: ["10dp"]
                    size_hint: None, None
                    width: "130dp"
                    
                    padding: [10,0,0,0]
                    height: "55dp"
                    MDLabel:
                        text: "rooms: "
                        size_hint: None, None
                        adaptive_size: True
                        halign: 'center'
                        color: 'gray'
                        font_size: '15dp'
                        
                        pos_hint: {'center_y': 0.5}
                    MDDropDownItem:
                        id: bed_item
                        text: '1'
                        size_hint_x: None
                        width: '2dp'
                        on_press: 
                            app.play()
                            app.laaa(True)
                        on_release: app.bedrooms_choice()
                        pos_hint: {'center_y': 0.5}
                        font_size: '14dp'
                        
                    
                
                            
            PropCard:
                radius: ["10dp"]
                size_hint_y: None
                height: "55dp"
                on_release: prop_type.focused=True
                
                TextInput:
                    hint_text: 'property type'
                    size_hint: 1, None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    height: self.minimum_height
                    multiline: False
                    foreground_color: 0/255, 0/255, 0/255, 1
                    background_color: 0,0,0,0
                    font_size: "15dp"
                    text_color: "black"
                    id: prop_type
                    input_type: "text"
                    on_text_validate: 
                        
                        app.search_thread(drop_item.text, country.text, state.text, town.text, bed_item.text, prop_type.text)
                    cursor_color: app.theme_cls.primary_color
               
                    on_focus: app.laaa(self.focused)

            CountryCard:
                radius: ["10dp"]
                size_hint_y: None
                height: "55dp"
                on_release: country.focused=True
                TextInput:
                    hint_text: 'country'
                    size_hint: 1, None
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    height: self.minimum_height
                    multiline: False
                    foreground_color: 0/255, 0/255, 0/255, 1
                    background_color: 0,0,0,0
                    font_size: "15dp"
                    text_color: "black"
                    id: country
                    input_type: "text"
                    active_line: True
                    on_text_validate: app.search_thread(drop_item.text, country.text, state.text, town.text, bed_item.text, prop_type.text)
                    cursor_color: app.theme_cls.primary_color
                    on_focus: app.laaa(self.focused)

            MDBoxLayout:
                size_hint_y: None
                adaptive_height: True
                
                spacing: "10dp"
                TownCard:
                    radius: ["10dp"]
                    size_hint_y: None
                    height: "55dp"
                    on_release: state.focused=True
                    TextInput:
                        hint_text: 'State/Province'
                        size_hint: 1, None
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        height: self.minimum_height
                        multiline: False
                        foreground_color: 0/255, 0/255, 0/255, 1
                        background_color: 0,0,0,0
                        font_size: "15dp"
                        text_color: "black"
                        id: state
                        input_type: "text"
                        on_text_validate: app.search_thread(drop_item.text, country.text, state.text, town.text, bed_item.text, prop_type.text)
                        cursor_color: app.theme_cls.primary_color
                        on_focus: app.laaa(self.focused)

                StreetCard:
                    radius: ["10dp"]
                    size_hint_y: None
                    height: "55dp"
                    on_release: town.focused=True
                    TextInput:
                        hint_text: 'town/city'
                        size_hint: 1, None
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        height: self.minimum_height
                        multiline: False
                        foreground_color: 0/255, 0/255, 0/255, 1
                        background_color: 0,0,0,0
                        font_size: "15dp"
                        text_color: "black"
                        id: town
                        input_type: "text"
                        on_text_validate: app.search_thread(drop_item.text, country.text, state.text, town.text, bed_item.text, prop_type.text)
                        cursor_color: app.theme_cls.primary_color
                        on_focus: app.laaa(self.focused)

                
                
                
            
            MDLabel:
                size_hint_y: None
                height: '50dp'
                text: 'Search results'
                markup: True
                id: check
                font_size: '17dp'
                opacity: 0
               
                theme_font_style: 'H6'
                
            
                
            MDIconButton:
                icon: 'refresh'
                icon_size: '25dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: refresh_card
                md_bg_color: 1,1,1,1
                disabled: True
                opacity: 0
                on_press: app.play()
                on_release: app.reverser_next()
                line_width: 1.1
                line_color: 0,0,0,1
                disabled_color: 0,0,0,1
                

            SearchLayout:
                size_hint: None, None
                adaptive_size: True
                id: search
                spacing: "20dp"
                # orientation: 'vertical'
                cols: 1 if Window.size[1] > Window.size[0] else 2
                
                pos_hint: {'center_x': 0.5}
                

            MDSpinner:
                active: False
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: None, None
                height: "30dp"
                width: "30dp"
                id: spin
                
            MDIconButton:
                icon: 'arrow-right'
                bold: True
                
                icon_size: '25dp'
                
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: app.next_thread(bed_item.text)
                md_bg_color: 1,1,1,1
                id: more_card
                disabled: True
                opacity: 0
                on_press: app.play()
        
                disabled_color: 0,0,0,1
                line_width: 1.1
                line_color: 0,0,0,1
                                
            

<TopTitle@MDCard+CommonElevationBehavior>
<MoreCard@MDCard+CommonElevationBehavior>
<ChooseCard@MDCard+CommonElevationBehavior>
<StreetCard@MDCard+CommonElevationBehavior>
<TownCard@MDCard+CommonElevationBehavior>
<CountryCard@MDCard+CommonElevationBehavior>
<BedCard@MDCard+CommonElevationBehavior>
<PropCard@MDCard+CommonElevationBehavior>


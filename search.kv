<SearchScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        
        TopTitle:
            size_hint_y: None
            height: searchido.height * 2.2
            id: toppy
            MDIconButton:
                icon: 'arrow-left'
                font_size: "15dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.play()
                on_release: app.switch_home()
                bold: True

            MDLabel:
                text: "Search"
                font_size: '16dp'
                bold: True
                halign: 'center'
                theme_font_style: 'Overline'

            MDIconButton:
                icon: 'magnify'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                font_size: "15dp"
                bold: True
                on_press: app.play()
                on_release: search.search(drop_item.text, country.text, state.text, town.text, bed_item.text)
                id: searchido

        MDBoxLayout:
            size_hint_y: None
            height: "100dp"
            padding: [10]
            ScrollView:
                bar_width: 0
                do_scroll_y: False
                do_scroll_x: True
                MDBoxLayout:
                    padding: [8,]
                    spacing: "10dp"
                    size_hint_x: None
                    adaptive_width: True
                    MDLabel:
                        text: "Search by:"
                        size_hint: None, None
                        adaptive_size: True
                        font_size: "13dp"
                        bold: True
                        pos_hint: {'center_y': 0.5}

                    ChooseCard:
                        radius: [10]
                        size_hint_x: None
                        width: "120dp"
                        spacing: "10dp"
                        padding: [10,0,0,0]
                        MDLabel:
                            text: "For: "
                            size_hint: None, None
                            adaptive_size: True
                            halign: 'center'
                            color: 'gray'
                            font_size: '15dp'
                            id: for_text
                            pos_hint: {'center_y': 0.5}
                            
                        MDDropDownItem:
                            id: drop_item
                            text: 'Sale'
                            size_hint_x: None
                            on_press: app.play()
                            on_release: app.choice.open()
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            font_size: '15dp'
                    CountryCard:
                        radius: [10]
                        size_hint_x: None
                        width: "170dp"
                        TextInput:
                            hint_text: 'country'
                            size_hint: 1, None
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            height: self.minimum_height
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            background_color: 0,0,0,0
                            font_size: "15dp"
                            text_color: "black"
                            id: country
                            
                    TownCard:
                        radius: [10]
                        size_hint_x: None
                        width: "170dp"
                        TextInput:
                            hint_text: 'State/Province'
                            size_hint: 1, None
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            height: self.minimum_height
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            background_color: 0,0,0,0
                            font_size: "15dp"
                            text_color: "black"
                            id: state
                    StreetCard:
                        radius: [10]
                        size_hint_x: None
                        width: "170dp"
                        TextInput:
                            hint_text: 'town/city'
                            size_hint: 1, None
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            height: self.minimum_height
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            background_color: 0,0,0,0
                            font_size: "15dp"
                            text_color: "black"
                            id: town
                    
                    BedCard:
                        radius: [10]
                        size_hint_x: None
                        width: "170dp"
                        spacing: "10dp"
                        padding: [10,0,0,0]
                        MDLabel:
                            text: "bedrooms: "
                            size_hint: None, None
                            adaptive_size: True
                            halign: 'center'
                            color: 'gray'
                            font_size: '15dp'
                            
                            pos_hint: {'center_y': 0.5}
                        MDDropDownItem:
                            id: bed_item
                            text: '1'
                            size_hint_x: None
                            adaptive_width: True
                            on_press: app.play()
                            on_release: app.bedrooms_choice()
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            font_size: '15dp'
                    
        MDBoxLayout:
            
            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                bar_width: 0
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "10dp"
                    orientation: 'vertical'
                    padding: [10]
                    SearchLayout:
                        size_hint_y: None
                        adaptive_height: True
                        id: search
                        spacing: "20dp"
                        orientation: 'vertical'
                        
                    MoreCard:
                        elevation: 0
                        ripple_behavior: True
                        size_hint: None, None
                        height: '70dp'
                        width: '270dp'
                        padding: [self.width/2.2,self.height/2,self.width/2.2,self.height/2]
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_release: search.next(drop_item.text, country.text, state.text, town.text, bed_item.text)
                        MDIcon:
                            icon: "arrow-down"
                            halign: 'center'
                            id: another
                            pos_hint: {'center_y': 0.5}
                            size_hint: None, None
                            adaptive_size: True
                            font_size: '20dp'
            

<TopTitle@MDCard+CommonElevationBehavior>
<MoreCard@MDCard+CommonElevationBehavior>
<ChooseCard@MDCard+CommonElevationBehavior>
<StreetCard@MDCard+CommonElevationBehavior>
<TownCard@MDCard+CommonElevationBehavior>
<CountryCard@MDCard+CommonElevationBehavior>
<BedCard@MDCard+CommonElevationBehavior>

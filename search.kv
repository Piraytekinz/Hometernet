<SearchScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        
        TopTitle:
            size_hint_y: None
            height: searchido.height * 3
            id: toppy
            MDIconButton:
                icon: 'arrow-left'
                user_font_size: "16dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.switch_home()
                bold: True

            MDLabel:
                text: "Search"
                font_size: '17dp'
                bold: True
                halign: 'center'
                theme_font_style: 'Overline'

            MDIconButton:
                icon: 'magnify'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                user_font_size: "16dp"
                bold: True
                on_press: search.search(drop_item.text, country.text, town.text, street.text)
                id: searchido

        MDBoxLayout:
            size_hint_y: None
            height: toppy.height
            padding: [10]
            ScrollView:
                bar_width: 0
                do_scroll_y: False
                do_scroll_x: True
                MDBoxLayout:
                    padding: [8,]
                    spacing: "10dp"
                    size_hint_x: None
                    adaptive_width: True
                    MDLabel:
                        text: "Search by:"
                        size_hint: None, None
                        height: 35
                        width: 80
                        font_size: "13sp"
                        bold: True
                    CountryCard:
                        radius: [10]
                        size_hint_x: None
                        width: 80
                        TextInput:
                            hint_text: 'country'
                            size_hint: 1, None
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            height: self.minimum_height
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            background_color: 0,0,0,0
                            font_size: "15sp"
                            text_color: "black"
                            id: country
                            
                    TownCard:
                        radius: [10]
                        size_hint_x: None
                        width: 80
                        TextInput:
                            hint_text: 'town'
                            size_hint: 1, None
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            height: self.minimum_height
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            background_color: 0,0,0,0
                            font_size: "15dp"
                            text_color: "black"
                            id: town
                    StreetCard:
                        radius: [10]
                        size_hint_x: None
                        width: 80
                        TextInput:
                            hint_text: 'street'
                            size_hint: 1, None
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            height: self.minimum_height
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            background_color: 0,0,0,0
                            font_size: "15dp"
                            text_color: "black"
                            id: street
                    ChooseCard:
                        radius: [10]
                        size_hint_x: None
                        width: 120
                        MDLabel:
                            text: "For:"
                            size_hint_x: None
                            width: 30
                            halign: 'center'
                            color: 'gray'
                            font_size: '15dp'
                            
                        MDDropDownItem:
                            id: drop_item
                            text: 'Sale'
                            on_release: app.choice.open()
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    
        MDBoxLayout:
            
            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                bar_width: 0
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "10dp"
                    orientation: 'vertical'
                    padding: [10]
                    SearchLayout:
                        size_hint_y: None
                        adaptive_height: True
                        id: search
                        spacing: "20dp"
                        orientation: 'vertical'
                        
                    MoreCard:
                        elevation: 0
                        ripple_behavior: True
                        size_hint: None, None
                        height: 100
                        width: 270
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_release: search.next(drop_item.text, country.text, town.text, street.text)
                        MDIcon:
                            icon: "arrow-down"
                            halign: 'center'
                            id: another
            

<TopTitle@MDCard+CommonElevationBehavior>
<MoreCard@MDCard+CommonElevationBehavior>
<ChooseCard@MDCard+CommonElevationBehavior>
<StreetCard@MDCard+CommonElevationBehavior>
<TownCard@MDCard+CommonElevationBehavior>
<CountryCard@MDCard+CommonElevationBehavior>

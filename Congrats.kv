<Congrats>:
    MDFloatLayout:
        MDBoxLayout:
            
            RelativeLayout:
                FitImage:
                    source: 'Apartment-Buildings.jpg'

                
                
                MDLabel:
                    text: "Congratulations!! \n Your Property is now on Homify"
                    color: "white"
                    bold: True
                    font_size: "30dp"
                    pos_hint: {'center_x': 0.5, 'center_y':0.6}
                    
                    size_hint_y: None
                    adaptive_height: True
                    halign: 'center'

                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                    spacing: "20dp"
                    padding: [20, 0, 20, 0]
                    Home:
                        ripple_behavior: True
                        elevation: 1
                        size_hint_y: None
                        adaptive_height: True
                        radius: [15,]
                        on_press: app.play()
                        on_release: app.switch_home()
                        pos_hint: {'center_x': 0.5}
                        MDLabel:
                            halign: 'center'
                            bold: True
                            text: "Home"
                            font_size: "18dp"
                    Properties:
                        ripple_behavior: True
                        elevation: 1
                        size_hint_y: None
                        adaptive_height: True
                        radius: [15,]
                        on_press: app.switch_products()
                        pos_hint: {'center_x': 0.5}
                        id: properties
                        MDLabel:
                            halign: 'center'
                            bold: True
                            text: "My Properties"
                            font_size: "18dp"
                            id: prop
<Home@MDCard+CommonElevationBehavior>
<Properties@MDCard+CommonElevationBehavior>
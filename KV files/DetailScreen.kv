<DetailsScreen>:
    RelativeLayout:
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "25dp"
            BoxLayout:
                orientation: 'vertical'
                spacing: "35dp"
                MDBoxLayout:
                    
                    ScrollView:
                        bar_width: 0
                        MDBoxLayout:
                            spacing: "25dp"
                            size_hint_x: None
                            adaptive_width: True
                            padding: [25]
                            MDCard:
                                size_hint_x: None
                                width: 250
                                radius: [20]
                                elevation: 12
                                RelativeLayout:
                                    FitImage:
                                        source: root.image
                                        radius: [20]

                            
                
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "10dp"
                    size_hint_y: None
                    adaptive_height: True
                    padding: [25,15,0,0]
                    
                    MDLabel:
                        text: root.type
                        size_hint_y: None
                        adaptive_height: True
                        font_size: "20dp"
                        color: "black"
                    MDLabel:
                        text: "Somewhere above the rainbow"
                        font_size: "15sp"
                        color: "gray"
                        size_hint_y: None
                        adaptive_height: True
                        
                MDBoxLayout:
                    padding: [25, 0, 0, 0]
                    size_hint_y: None
                    adaptive_height: True
                    
                    MDLabel:
                        size_hint_y: None
                        adaptive_height: True
                        text: "QR. 750.000.000,-"
                        font_size: "25dp"
            MDBoxLayout:
                
                size_hint_y: None
                height: 70
                MDCard:
                    ripple_behavior: True
                    MDLabel:
                        text: "Price: " + root.price
                        halign: "center"
                        color: "black"
                        font_size: "15sp"
                        bold: True
                        
                MDCard:
                    md_bg_color: app.theme_cls.primary_color
                    radius: [5,0,0,0]
                    ripple_behavior: True
                    size_hint_x: .5
                    on_release: app.send_email(root.email)
                    MDLabel:
                        text: "Buy"
                        halign: "center"
                        color: "white"
                        font_size: "13sp"
                        bold: True
                        
        MDFloatLayout:
            ReturnButton:
                radius: [50,]
                pos_hint: {'center_x': 0.8, 'center_y': 0.45}
                size_hint: None, None
                height: 50
                width: 50
                elevation: 0
                ripple_behavior: True
                on_press: app.change_screen("Home")
                MDIcon:
                    icon: "arrow-left"
                    halign: "center"
<PropertySaleCards>:
    
    
    padding: [0]
    size_hint: None, None
    width: Window.size[0] - 130 if Window.size[0] < Window.size[1] else Window.size[0] / 2 + 40
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    height: Window.size[1] / 2 + 20 if Window.size[1] > Window.size[0] else Window.size[1] - 45
    id: main_card
    radius: [5, ]
    MDBoxLayout:
        orientation: 'vertical'
        padding: [10,]
        spacing: "20dp"
        SalePic:
            on_press: app.play()
            on_release: app.editscreen(root.image, root.local_image, root.tot, root.price, root.country, root.province, root.town, root.street, root.bedrooms, root.bathrooms, root.landspace, root.email, root.key, root.description, root.amenities)
            
            
            
            radius: [5,]
            ripple_behavior: True
            RelativeLayout:
                FitImage:
                    source: str(root.image)
                    radius: [5, ]

                
                MDLabel:
                    text: root.price
                    halign: 'center'
                    font_size: "14dp"
                    md_bg_color: 1,1,1,1
                    font_color: "black"
                    bold: True
                    size_hint: None, None
                    height: dp(30)
                    adaptive_width: True
                    pos_hint: {'center_x': 0.75, 'center_y': 0.89}
                    
                # MDBoxLayout:
                #     size_hint: None, None
                #     adaptive_size: True
                #     md_bg_color: 1,1,1,1
                #     padding: [10]
                #     pos_hint: {'center_x': 0.25, 'center_y': 0.89}
                MDLabel:
                    text: str(root.views) + " " + "views"
                    halign: 'center'
                    font_size: "14dp"
                    pos_hint: {'center_x': 0.25, 'center_y': 0.89}
                    
                    bold: True
                    
                    size_hint: None, None
                    height: dp(30)
                    adaptive_width: True
                    md_bg_color: 1,1,1,1
                        
                        
                        
                        

        
            
            
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            padding: [10, 0, 5, 0]
            size_hint_y: None
            adaptive_height: True
            MDLabel:
                text: root.tot
                bold: True
                size_hint: None, None
                adaptive_size: True
                font_size: '15dp'
            MDBoxLayout:
                size_hint_y: None
                adaptive_height: True
                
                MDLabel:
                    text: root.country + ',' + ' ' + root.province + ',' + ' ' + root.town + ',' + ' ' + root.street
                    color: "gray"
                    font_size: "13dp"
                    size_hint_y: None
                    adaptive_height: True
                    markup: True
                    shorten: True
                    ellipsis_options: {'color':(0,0,0,0.5), 'underline':False}
                        
            

        MDSeparator:

        MDBoxLayout:
            padding: [10, 5, 0, 17]
            size_hint_y: None
            adaptive_height: True
            MDLabel:
                text: root.bedrooms + '\n [b]bedrooms[/b]'
                font_size: "14dp"
                bold: True
                halign: 'center'
                size_hint_y: None
                adaptive_height: True
                markup: True
            MDLabel:
                text: root.bathrooms + '\n [b]bathrooms[/b]'
                font_size: "14dp"
                bold: True
                halign: 'center'
                size_hint_y: None
                adaptive_height: True
                markup: True
                
            MDLabel:
                text: root.landspace + '\n [b]Land space[/b]'
                font_size: "14dp"
                bold: True
                halign: 'center'
                size_hint_y: None
                adaptive_height: True
                markup: True


<SalePic@MDCard+CommonElevationBehavior>



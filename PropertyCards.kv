<PropertySaleCards>:
    
    
    padding: [0]
    size_hint: None, None
    width: Window.size[0] / 1.05 if Window.size[0] < Window.size[1] else Window.size[0] / 2 
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    height: Window.size[1] / 2  if Window.size[1] > Window.size[0] else Window.size[1] / 1.1
    id: main_card
    on_press: app.play()
    on_release: app.editscreen(root.image, root.local_image, root.tot, root.price, root.country, root.province, root.town, root.street, root.bedrooms, root.bathrooms, root.landspace, root.email, root.key, root.description, root.amenities)
    radius: ["5dp", ]
    md_bg_color: 1,1,1,1
    orientation: 'vertical'
    padding: ['0dp', '0dp', '0dp', '10dp']
    spacing: "20dp"
    line_color: 0.9,0.9,0.9,0.5
        
        
    
    FitImage:
        source: str(root.image)
        radius: ["5dp","5dp", "0dp", "0dp"]
        keep_ratio: False
        allow_stretch: True

        
        
                
            
        
                    
                    
                    
                    

    
        
        
    Label:
        text: root.tot
        bold: True
        size_hint_y: None
        height: self.texture_size[1]
        font_size: '16dp'
        color: "black"
        text_size: self.size
        padding_x: "25dp"
        
        
    MDLabel:
        text: root.country + ',' + ' ' + root.province + ',' + ' ' + root.town + ',' + ' ' + root.street
        color: "gray"
        font_size: "14dp"
        size_hint_y: None
        adaptive_height: True
        text_size: self.size
        markup: True
        shorten: True
        ellipsis_options: {'color':(0,0,0,0.5), 'underline':False}
        padding_x: "25dp"
                    
        

    

    MDLabel:
        text: root.bedrooms + ' rooms' + ' - ' + root.bathrooms + ' baths' + ' - ' + root.landspace 
        font_size: '14dp'
        size_hint_y: None
        height: self.texture_size[1]
        color: 'gray'
        
        padding_x: "25dp"

    MDSeparator:

    MDBoxLayout:
        size_hint_y: None
        adaptive_height: True
        MDLabel:
            text: root.price
            
            font_size: "20dp"

            font_color: "black"
            bold: True
            size_hint_y: None
            height: dp(40)
            padding_x: "25dp"
            pos_hint: {'center_x': 0.75, 'center_y': 0.5}
        
        MDLabel:
            text: str(root.views) + " " + "views"
            
            font_size: "14dp"
            pos_hint: {'center_x': 0.25, 'center_y': 0.5}
            
            bold: True
            padding_x: "25dp"
            size_hint_y: None
            height: dp(40)
            line_color: 0.9,0.9,0.9,0.5







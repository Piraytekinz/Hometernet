<BookmarkScreen>:
    # on_enter: bk.begin()
    RelativeLayout:
        MDBoxLayout:
            orientation: 'vertical'
            
            BooksTitle:
                size_hint_y: None
                height: "70dp"
                
                id: book_title

                MDIconButton:
                    icon: 'trash-can-outline'
                    icon_size: "20dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_press: app.play()
                    on_release: bk.clear_bookmarks_auth()
                    id: arrow_right

                

                MDLabel:
                    text: "Bookmarks"
                    font_size: '16dp'
                    bold: True
                    theme_font_style: 'Overline'
                    halign: 'center'

                MDIconButton:
                    icon: 'arrow-right'
                    icon_size: "20dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_press: app.play()
                    on_release: app.switch_home()
                    id: arrow_right

                

            ScrollView:
                scroll_distance: 5
                effect_cls: "ScrollEffect"
                BookmarkLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "20dp"
                    padding: [5, 15, 5, 5]
                    id: bk

        Reloadbk:
            size_hint: None, None
            height: "46dp"
            width: "46dp"
            radius: ["23dp"]
            pos_hint: {'center_x': 0.9, 'center_y': 0.2}
            padding: ["23dp"]
            ripple_behavior: True
            id: reload
            elevation: 0
            on_press: app.reload_bookmarks()
            on_press: app.play()
            MDIcon:
                icon: 'refresh'
                font_size: "16dp"

<BooksTitle@MDCard+CommonElevationBehavior>
<Reloadbk@MDCard+CommonElevationBehavior>
        

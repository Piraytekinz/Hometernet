<BookmarkScreen>:
    # on_enter: bk.begin()
    
    MDBoxLayout:
        orientation: 'vertical'
        
        MDBoxLayout:
            size_hint_y: None
            height: "70dp"
            md_bg_color: 1,1,1,1
            id: book_title
            padding: [10,0,0,0]

            

            

            MDLabel:
                text: "Bookmarks"
                font_size: '16dp'
                bold: True
                theme_font_style: 'Overline'
                padding_x: "10dp"

            MDIconButton:
                icon: 'trash-can-outline'
                icon_size: "20dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                theme_text_color: 'Custom'
                text_color: "black"
                on_press: 
                    app.play()
                    self.text_color=app.theme_cls.primary_color
                on_release: 
                    bk.clear_bookmarks_auth()
                    self.text_color="black"
                id: arrow_right 


            MDIconButton:
                icon: 'refresh'
                icon_size: '20dp'
                theme_text_color: 'Custom'
                text_color: "black"
                on_press: 
                    app.play()
                    self.text_color=app.theme_cls.primary_color
                    

                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: reload
                disabled_color: 0,0,0,1
        
                on_release: 
                    app.reload_bookmarks()
                    self.text_color="black"

            MDIconButton:
                icon: 'arrow-right'
                icon_size: "20dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.play()
                on_release: app.switch_home()
                id: arrow_right

        MDSeparator:
            color: 0.9,0.9,0.9,0.4
            

        ScrollView:
            scroll_distance: 1
            effect_cls: "ScrollEffect"
            scroll_wheel_distance: 50
            smooth_scroll_end: 30
            scroll_timeout: 1000
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                adaptive_height: True
                id: relayer
                
                BookmarkLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "20dp"
                    padding: [5, 15, 5, 5]
                    id: bk

                MDSpinner:
                    active: False
                    size_hint: None, None
                    width: '30dp'
                    height: '30dp'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    id: spin_bk

        

        
            

<BooksTitle@MDCard+CommonElevationBehavior>
<Reloadbk@MDCard+CommonElevationBehavior>
        

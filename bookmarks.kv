<BookmarkScreen>:
    on_enter: bk.start()
    MDBoxLayout:
        orientation: 'vertical'
        
        BooksTitle:
            size_hint_y: None
            height: arrow_right.height + 55
            padding: [10]
            id: book_title

            MDIconButton:
                icon: 'arrow-left'
                user_font_size: "16dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.switch_home()
                id: arrow_right

            MDLabel:
                text: "Bookmarks"
                font_size: '17dp'
                bold: True
                theme_font_style: 'Overline'
                halign: 'center'

            MDIconButton:
                icon: 'trash-can'
                user_font_size: "16dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.delete_user_auth()
                id: arrow_right

        ScrollView:
            BookmarkLayout:
                orientation: 'vertical'
                size_hint_y: None
                adaptive_height: True
                spacing: "20dp"
                padding: [5, 15, 5, 5]
                id: bk


<BooksTitle@MDCard+CommonElevationBehavior>
        

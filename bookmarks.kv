<BookmarkScreen>:
    # on_enter: bk.begin()
    
    BoxLayout:
        orientation: 'vertical'
        
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            size_hint_y: None
            height: "90dp"
            id: book_title
            padding: ["10dp","30dp",0,0]
            canvas.before:
                Color:
                    rgba: (1,1,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            

            

            Label:
                text: "[color=#000000]Bookmarks[/color]"
                font_size: '25dp'
                bold: True
                theme_font_style: 'Overline'
                markup: True
                padding_x: "10dp"
                text_size: self.size
                halign: 'left'
                valign: 'center'
                pos_hint: {'center_y': 0.5}

            MDIconButton:
                icon: 'trash-can-outline'
                icon_size: '20dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                theme_text_color: 'Custom'
                text_color: "black"
                on_press: 
                    app.play()
                    self.text_color=app.theme_cls.primary_color
                on_release: 
                    bk.clear_bookmarks_auth()
                    self.text_color="black"
                id: arrow_right 


            MDIconButton:
                icon: 'refresh'
                icon_size: '20dp'
                theme_text_color: 'Custom'
                text_color: "black"
                on_press: 
                    app.play()
                    self.text_color=app.theme_cls.primary_color
                    

                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: reload
                md_bg_color_disabled: 1,1,1,1
        
                on_release: 
                    app.reload_bookmarks()
                    self.text_color="black"

            MDIconButton:
                icon: 'arrow-right'
                icon_size: '20dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.play()
                on_release: app.switch_home()
                id: arrow_right

        MDSeparator:
            color: 0.9,0.9,0.9,0.4
            

        Scroller:
            scroll_distance: 1
            # effect_cls: "ScrollEffect"
            scroll_wheel_distance: 50
            smooth_scroll_end: 30
            on_scroll_move: app.reload_bookmarks() if self.scroll_y > 1.1 and app.thread_bk_started == False else app.do()
            id: bk_scroller
            
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                adaptive_height: True
                id: relayer
                spacing: "10dp"
                BookmarkLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "20dp"
                    padding: ["10dp", "15dp", "10dp", "5dp"]
                    id: bk
                    
                    
                    
                    
                    
                    


                MDSpinner:
                    active: False
                    size_hint: None, None
                    width: '30dp'
                    height: '30dp'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    id: spin_bk
                    opacity: 0

        

        
            

<BooksTitle@MDCard+CommonElevationBehavior>
<Reloadbk@MDCard+CommonElevationBehavior>
        

<BookmarkScreen>:
    on_enter: bk.begin()
    MDBoxLayout:
        orientation: 'vertical'
        
        BooksTitle:
            size_hint_y: None
            height: arrow_right.height * 2.2
            padding: [10]
            id: book_title

            MDIconButton:
                icon: 'trash-can'
                font_size: "15dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.play()
                on_release: bk.clear_bookmarks_auth()
                id: arrow_right

            

            MDLabel:
                text: "Bookmarks"
                font_size: '16dp'
                bold: True
                theme_font_style: 'Overline'
                halign: 'center'

            MDIconButton:
                icon: 'arrow-right'
                font_size: "15dp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.play()
                on_release: app.switch_home()
                id: arrow_right

            

        ScrollView:
            BookmarkLayout:
                orientation: 'vertical'
                size_hint_y: None
                adaptive_height: True
                spacing: "20dp"
                padding: [5, 15, 5, 5]
                id: bk


<BooksTitle@MDCard+CommonElevationBehavior>
        

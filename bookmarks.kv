<BookmarkScreen>:
    # on_enter: bk.begin()
    RelativeLayout:
        id: relayer
        MDBoxLayout:
            orientation: 'vertical'
            
            BooksTitle:
                size_hint_y: None
                height: "70dp"
                
                id: book_title

                MDIconButton:
                    icon: 'trash-can-outline'
                    icon_size: "20dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_press: app.play()
                    on_release: bk.clear_bookmarks_auth()
                    id: arrow_right

                

                MDLabel:
                    text: "Bookmarks"
                    font_size: '16dp'
                    bold: True
                    theme_font_style: 'Overline'
                    halign: 'center'

                MDIconButton:
                    icon: 'arrow-right'
                    icon_size: "20dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_press: app.play()
                    on_release: app.switch_home()
                    id: arrow_right

                

            ScrollView:
                scroll_distance: 1
                effect_cls: "ScrollEffect"
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    adaptive_height: True
                    BookmarkLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        adaptive_height: True
                        spacing: "20dp"
                        padding: [5, 15, 5, 5]
                        id: bk

                    MDSpinner:
                        active: False
                        size_hint: None, None
                        width: '30dp'
                        height: '30dp'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        id: spin_bk

        # Reloadbk:
        #     size_hint: None, None
        #     height: "46dp"
        #     width: "46dp"
        #     radius: ["23dp"]
        #     pos_hint: {'center_x': 0.9, 'center_y': 0.2}
        #     padding: ["23dp"]
        #     ripple_behavior: True
        #     id: reload
        #     elevation: 0
        #     on_press: app.reload_bookmarks()
        #     on_press: app.play()
        #     MDIcon:
        #         icon: 'refresh'
        #         font_size: "16dp"

        MDIconButton:
            icon: 'refresh'
            icon_size: '24dp'
            on_press: app.play()
            on_press: app.reload_bookmarks()
            pos_hint: {'center_x': 0.9, 'center_y': 0.2}
            id: reload
            md_bg_color: 1,1,1,1
            disabled_color: 0,0,0,1
            elevation: 1

<BooksTitle@MDCard+CommonElevationBehavior>
<Reloadbk@MDCard+CommonElevationBehavior>
        

<CreatorScreen>:
    
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        MiCard:
            size_hint_y: None
            height: arrow_right.height * 3
            padding: [10,]
            elevation: 0
            MDLabel:
                text: 'Hometernet'
                theme_font_style: 'Overline'
            MDIconButton:
                user_font_size: '14dp'
                icon: 'arrow-right'
                on_press: app.switch_home()
                pos_hint: {'center_y': 0.5}
                id: arrow_right
        MDBoxLayout:
            ScrollView:
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "30dp"
                    orientation: 'vertical'
                    padding: [20]
                    ACardi:
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: None, None
                        
                        height: Window.size[1]/2
                        width: Window.size[1]/2
                        
                        radius:[self.width/2]
                        elevation: 0
                        id: pic
                        FitImage:
                            source: 'Images/Pirate King (2).jpg'
                            radius: [pic.width/2]

                    MDLabel:
                        text: 'JOSHUA ANANG'
                        size_hint_y: None
                        adaptive_height: True
                        halign: 'center'                       
                        font_style: 'Overline'
                        font_size: '20dp'
                        bold: True
                    MDLabel:
                        text: 'CEO/FOUNDER/DEVELOPER of Hometernet'
                        font_size: '20dp'
                        font_style: 'Caption'
                        halign: 'center'
                    MDLabel:
                        text: 'Contact me at: anangjosh8@gmail.com to address any personal issues about Hometernet.'
                        halign: 'center'
                        font_size: '20dp'
                        size_hint_y: None
                        adaptive_height: True

<ACardi@MDCard+CommonElevationBehavior>
<MiCard@MDCard+CommonElevationBehavior>

    
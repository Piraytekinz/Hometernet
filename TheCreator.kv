<CreatorScreen>:
    
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        MiCard:
            size_hint_y: None
            height: "70dp"
            padding: [10,0,0,0]
            elevation: 0
            MDLabel:
                text: 'TheCreator'
                theme_font_style: 'Overline'
                font_size: '16dp'
                bold: True
            MDIconButton:
                font_size: '15dp'
                icon: 'arrow-right'
                on_press: app.play()
                on_release: app.switch_home()
                pos_hint: {'center_y': 0.5}
                id: arrow_right
                icon_size: "20dp"
        MDBoxLayout:
            ScrollView:
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "30dp"
                    orientation: 'vertical'
                    padding: [20]
                    ACardi:
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint: None, None
                        
                        height: Window.size[1]/2
                        width: Window.size[1]/2
                        
                        radius:[self.width/2]
                        elevation: 0
                        id: pic
                        FitImage:
                            source: 'Pirate King (2).jpg'
                            radius: [pic.width/2]

                    MDLabel:
                        text: 'JOSHUA ANANG'
                        size_hint_y: None
                        adaptive_height: True
                        halign: 'center'                       
                        font_style: 'Overline'
                        font_size: '20dp'
                        bold: True
                    MDLabel:
                        text: 'CEO/FOUNDER/DEVELOPER of Hometernet'
                        font_size: '20dp'
                        font_style: 'Caption'
                        halign: 'center'
                    

<ACardi@MDCard+CommonElevationBehavior>
<MiCard@MDCard+CommonElevationBehavior>

    
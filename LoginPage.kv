<AccountLoginPage>:
    MDFloatLayout:
        
        RelativeLayout:
            FitImage:
                source: ''
           
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'
                
                MDIconButton:
                    icon: 'arrow-left'
                    on_press: app.switch_home()
                    
                    

                
            MDCard:
                orientation: 'vertical'
                md_bg_color: 255/255, 255/255, 255/255, 0.5
                padding: [20,]
                radius: [20,]
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: .9, .8
                MDLabel:
                    text: "Hello Newbie! \nContinue here to sign up."
                    halign: 'center'
                    bold: True
                    font_size: "20dp"
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "20dp"
                    MDCard:
                        oreintation: 'vertical'
                        padding: [10,]
                        MDTextField:
                            id: email
                            hint_text: 'email'
                            on_text: app.email(self.text)
                            pos_hint: {'center_x': .5, 'center_y': .5}
                    
                    MDCard:
                        oreintation: 'vertical'
                        padding: [10,]
                        MDTextField:
                            id: password
                            hint_text: 'password'
                            on_text: app.password(self.text)
                            pos_hint: {'center_x': .5, 'center_y': .5}

                    MDRaisedButton:
                        text: "sign-up"
                        on_press: app.account_submit()
                        
                        pos_hint: {'center_x': .5, 'center_y': .5}

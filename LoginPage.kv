<AccountLoginPage>:
    
    on_enter:
        conf_eye.icon='eye-off'
        pass_eye.icon='eye-off'
        password.password=True
        confirm.password=True
        
    ScrollView:
        effect_cls: "ScrollEffect"
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            adaptive_height: True
            spacing: '30dp'
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'
                size_hint_y: None
                height: home.height
                
                MDIconButton:
                    icon: 'arrow-left'
                    on_press: app.play()
                    on_release: app.first_time_signin(direction='right')
                    id: home
                    size_hint_y: None
                    adaptive_height: True
                    icon_size: '20dp'
            MDBoxLayout:
                orientation: 'vertical'
                padding: ["20dp","20dp","20dp","35dp"]
                spacing: "30dp"
                size_hint_y: None
                adaptive_height: True
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    padding: ["20dp","0dp","20dp","35dp"]
                    orientation: 'vertical'
                    spacing: '20dp'
                    MDLabel:
                        font_size: "20dp"
                        text: 'Welcome to Hometernet'
                        halign: 'center'
                        size_hint_y: None
                        adaptive_height: True
                        id: notice
                        bold: True
                    MDLabel:
                        font_size: "15dp"
                        text: 'Fill in details'
                        halign: 'center'
                        size_hint_y: None
                        adaptive_height: True
                        id: notice
                        
                
                        # font_size: '130dp'
                        # pos_hint: {'center_x': 0.5}
                        # halign: 'scenter'
                
                
                    

                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "20dp"
                    size_hint_y: None
                    adaptive_height: True
                    
                    MDCard:
                        size_hint_y: None
                        height: '50dp'
                        radius: ["25dp",]
                        id: mail_box
                        padding: ['20dp']
                        line_color: app.theme_cls.primary_color
                        md_bg_color: 0,0,0,0
                        elevation: 0
                        on_release:
                            email.focused=True
                        TextInput:
                            hint_text: 'email'
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            size_hint_y: None
                            font_size: "15dp"
                            text_color: "black"
                            pos_hint: {'center_y': 0.5}
                            height: self.minimum_height
                            background_color: 0,0,0,0
                            on_text: app.email(self.text)
                            input_type: 'mail'
                            cursor_color: app.theme_cls.primary_color
                            id: email

                    MDCard:
                        size_hint_y: None
                        height: '50dp'
                        radius: ["25dp",]
                        elevation: 0
                        id: passwrd
                        padding: ['20dp']
                        line_color: app.theme_cls.primary_color
                        ripple_behavior: False
                        md_bg_color: 0,0,0,0
                        on_release: password.focused=True
                        TextInput:
                            hint_text: 'create password'
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            size_hint_y: None
                            font_size: "15dp"
                            text_color: "black"
                            pos_hint: {'center_y': 0.5}
                            height: self.minimum_height
                            background_color: 0,0,0,0
                            password: True
                            on_text: app.password(self.text)
                            cursor_color: app.theme_cls.primary_color
                            id: password

                        MDIconButton:
                            icon_size: '20dp'
                            icon: 'eye-off'
                            pos_hint: {'center_y': 0.5}
                            id: pass_eye
                            on_press: 
                                password.focused=True
                                app.play()
                                self.icon='eye-off' if self.icon=='eye' else 'eye'
                                
                            on_release:
                                password.focused=True
                                password.password=False if password.password == True else True

                    MDCard:
                        size_hint_y: None
                        height: '50dp'
                        radius: ["25dp",]
                        elevation: 0
                        padding: ['20dp']
                        line_color: app.theme_cls.primary_color
                        ripple_behavior: False
                        md_bg_color: 0,0,0,0
                        on_release: 
                            confirm.focused=True
                        TextInput:
                            hint_text: 'confirm password'
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            size_hint_y: None
                            font_size: "15dp"
                            text_color: "black"
                            pos_hint: {'center_y': 0.5}
                            height: self.minimum_height
                            background_color: 0,0,0,0
                            password: True
                            id: confirm
                            cursor_color: app.theme_cls.primary_color

                        MDIconButton:
                            icon_size: '20dp'
                            icon: 'eye-off'
                            pos_hint: {'center_y': 0.5}
                            id: conf_eye
                            on_press: 
                                confirm.focused=True
                                app.play()
                                self.icon='eye-off' if self.icon=='eye' else 'eye'
                                
                            on_release:
                                confirm.focused=True
                                confirm.password=False if confirm.password == True else True
                
                        

                Final:
                    radius: ["25dp",]
                    md_bg_color: app.theme_cls.primary_color
                    ripple_behavior: True
                    size_hint_y: None
                    height: passwrd.height
                    on_press: app.sound()
                    
                    on_release: app.show_terms_create(email.text)
                    
                    MDLabel:
                        text: 'sign up'
                        halign: 'center'
                        font_size: '15dp'
                        color: 'white'

            MDBoxLayout:
                spacing: "10dp"
                size_hint: None, None
                adaptive_size: True
                orientation: 'vertical'
                padding: ["0dp","0dp","0dp","25dp"]
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                MDLabel:
                    text: 'You argree to the'
                    size_hint_y: None
                    adaptive_height: True
                    color: 'gray'
                    font_size: '15dp'
                    halign: 'center'

                MDBoxLayout:
                    spacing: "10dp"
                    size_hint: None, None
                    adaptive_size: True
                    
                    
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDTextButton:
                        text: "Terms and conditions"
                        size_hint: None, None
                        adaptive_size: True
                        font_size: '15dp'
                        halign: 'center'
                        color: app.theme_cls.primary_color
                        on_press: app.play()
                        on_release: app.show_terms()
                            
                    MDTextButton:
                        text: 'Privacy policy'
                        size_hint: None, None
                        adaptive_size: True
                        font_size: '15dp'
                        color: app.theme_cls.primary_color
                        on_press: app.play()
                        on_release: app.show_privacy()
                            
                            
                        id: sign_up
                        halign: 'center'




<Final@MDCard+CommonElevationBehavior>
            

        


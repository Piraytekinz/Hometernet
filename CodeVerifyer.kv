<CodeVerifyer>:
    MDBoxLayout:
        
        size_hint_x: None
        width: card.width
        pos_hint: {'center_x': 0.5}
        MDCard:
            size_hint: None, None
            height: Window.size[1] / 1.2
            width: Window.size[0] / 1.2
            elevation: 2
            radius: [15]
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            id: card
            ScrollView:
                bar_width: 0
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                effect_cls: "ScrollEffect"
                MDBoxLayout:
                    spacing: "30dp"
                    orientation: 'vertical'
                    padding: [20]
                    size_hint_y: None
                    adaptive_height: True
                    id: verify
                    
                    MDLabel:
                        text: "Verify your email address."
                        size_hint_y: None
                        adaptive_height: True
                        halign: 'center'
                        font_size: '25dp'
                        bold: True

                    MDLabel:
                        text: 'Please type in the 6 digit verification code we sent to ' + root.text
                        halign: 'center'
                        font_size: '15dp'
                        size_hint_y: None
                        adaptive_height: True

                    MDBoxLayout:
                        size_hint: None, None
                        height: '120dp'
                        width: '200dp'
                        radius: ["10dp",]
                        pos_hint: {'center_x': 0.5}
                        md_bg_color: 0,0,0,0.05
                        padding: ["10dp","0dp","10dp","0dp"]
                        TextInput:
                            size_hint_y: None
                            height: self.minimum_height
                            
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                            multiline: False
                            foreground_color: 0/255, 0/255, 0/255, 1
                            background_color: 0,0,0,0
                            input_type: 'number'
                            input_filter: 'int'
                            id: verify_code
                            font_size: '50dp'
                            cursor_color: 0,0,0,1
                            on_text_validate: app.create_account_init(verify_code.text)

                    MDBoxLayout:
                        size_hint: None, None
                        adaptive_size: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        spacing: "10dp"
                        padding: ["20dp","0dp","0dp","10dp"]
                        MDLabel:
                            text: "Didn't receive code?"
                            size_hint: None, None
                            adaptive_size: True
                            font_size: '15dp'
                        MDTextButton:
                            text: 'resend now'
                            size_hint_y: None
                            adaptive_height: True
                            font_size: '15dp'
                            color: app.theme_cls.primary_color
                            size_hint: None, None
                            adaptive_size: True
                            on_press: app.play()
                            on_release: app.resend_now('sign-in')
                            id: sign_up

                    MDRaisedButton:
                        text: 'Submit'
                        on_press: app.play()
                        on_release: app.create_account_init(verify_code.text)
                        pos_hint: {'center_y':0.5, 'center_x': 0.5}
<PropertyRentCards>:
    elevation: 0
    
    size_hint: None, None
    width: 270
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    height: 400
    
    radius: [5, ]
    MDBoxLayout:
        orientation: 'vertical'
        padding: [10,]
        spacing: "20dp"
        RentPic:
            size_hint_y: None
            height: 180
            elevation: 12
            on_press: app.editrentscreen(root.image, root.local_image, root.tot, root.price, root.country, root.province, root.town, root.street, root.bedrooms, root.bathrooms, root.landspace, root.email, root.key, root.description)
            radius: [5,]
            ripple_behavior: True
            RelativeLayout:
                FitImage:
                    source: root.image
                    radius: [5, ]

                
               
                MDLabel:
                    text: root.price
                    halign: 'center'
                    font_size: "13dp"
                    
                    font_color: "black"
                    bold: True
                    size_hint_x: None
                    adaptive_width: True
                    size_hint_y: .15
                    md_bg_color: 1,1,1,1
                    pos_hint: {'center_x': 0.75, 'center_y': 0.87}

                MDLabel:
                    text: root.views + " " + "views"
                    halign: 'center'
                    font_size: "13dp"
                    
                    font_color: "black"
                    bold: True
                    size_hint_x: None
                    adaptive_width: True
                    size_hint_y: .15
                    md_bg_color: 1,1,1,1
                    pos_hint: {'center_x': 0.25, 'center_y': 0.87}
                        
                        
                        

        
            
            
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "6dp"
            padding: [10, 0, 0, 0]
            
            MDLabel:
                text: root.tot
                bold: True
                size_hint: None, None
                adaptive_size: True
                font_size: "15dp"
            MDBoxLayout:
                size_hint_y: None
                adaptive_height: True
                
                MDLabel:
                    text: root.country + ',' + ' ' + root.province + ',' + ' ' + root.town + ',' + ' ' + root.street
                    color: "gray"
                    font_size: "13dp"
                    size_hint_y: None
                    adaptive_height: True

        MDSeparator:

        MDBoxLayout:
            padding: [10, 5, 0, 17]
            
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "6dp"
                MDLabel:
                    text: root.bedrooms
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                MDLabel:
                    text: "bedrooms"
                    color: "black"
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "6dp"
                MDLabel:
                    text: root.bathrooms
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                MDLabel:
                    text: "bathrooms"
                    color: "black"
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "6dp"
                MDLabel:
                    text: root.landspace
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                MDLabel:
                    text: "Land space"
                    color: "black"
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True

<RentPic@MDCard+CommonElevationBehavior>
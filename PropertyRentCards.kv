<PropertyRentCards>:
    
    padding: [0]
    size_hint: None, None
    width: Window.size[0] - 200 if Window.size[0] < Window.size[1] else Window.size[0] / 2 + 40
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    height: Window.size[1] / 2 + 20 if Window.size[1] > Window.size[0] else Window.size[1] - 45
    id: main_card
    
    radius: [5, ]
    MDBoxLayout:
        orientation: 'vertical'
        padding: [10,]
        spacing: "20dp"
        RentPic:
            on_press: app.play()
            elevation: 0
            on_release: app.editrentscreen(root.image, root.local_image, root.tot, root.price, root.country, root.province, root.town, root.street, root.bedrooms, root.bathrooms, root.landspace, root.email, root.key, root.description, root.amenities)
            radius: [5,]
            ripple_behavior: True
            RelativeLayout:
                AsyncImage:
                    source: str(root.image)
                    radius: [5,]

                
               
                MDBoxLayout:
                    size_hint: None, None
                    adaptive_size: True
                    md_bg_color: 1,1,1,1
                    padding: [10]
                    pos_hint: {'center_x': 0.75, 'center_y': 0.89}
                    MDLabel:
                        text: root.price
                        halign: 'center'
                        font_size: "14dp"
                        md_bg_color: 1,1,1,1
                        font_color: "black"
                        bold: True
                        size_hint: None, None
                        adaptive_size: True
                MDBoxLayout:
                    size_hint: None, None
                    adaptive_size: True
                    md_bg_color: 1,1,1,1
                    padding: [10]
                    pos_hint: {'center_x': 0.25, 'center_y': 0.89}
                    MDLabel:
                        text: str(root.views) + " " + "views"
                        halign: 'center'
                        font_size: "14dp"
                        
                        font_color: "black"
                        bold: True
                        size_hint_x: None
                        size_hint: None, None
                        adaptive_size: True
                        md_bg_color: 1,1,1,1
                        
                        
                        

        
            
            
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            padding: [10, 0, 5, 0]
            size_hint_y: None
            adaptive_height: True
            MDLabel:
                text: root.tot
                bold: True
                size_hint: None, None
                adaptive_size: True
                font_size: "15dp"
            MDBoxLayout:
                size_hint_y: None
                adaptive_height: True
                
                MDLabel:
                    text: root.country + ',' + ' ' + root.province + ',' + ' ' + root.town + ',' + ' ' + root.street
                    color: "gray"
                    font_size: "13dp"
                    size_hint_y: None
                    adaptive_height: True

        MDSeparator:

        MDBoxLayout:
            padding: [10, 5, 0, 17]
            size_hint_y: None
            adaptive_height: True
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "6dp"
                size_hint_y: None
                adaptive_height: True
                MDLabel:
                    text: root.bedrooms
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                MDLabel:
                    text: "bedrooms"
                    color: "black"
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "6dp"
                MDLabel:
                    text: root.bathrooms
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                MDLabel:
                    text: "bathrooms"
                    color: "black"
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "6dp"
                MDLabel:
                    text: root.landspace
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                MDLabel:
                    text: "Land space"
                    color: "black"
                    font_size: "13dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True

<RentPic@MDCard+CommonElevationBehavior>
<DetailsScreen>:
    
    MDBoxLayout:
        orientation: 'vertical'
        
        ScrollView:
            effect_cls: 'ScrollEffect'
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "25dp"
                adaptive_height: True
                size_hint_y: None
                MDBoxLayout:
                    
                    size_hint_y: None
                    height: 300
                    
                    MDBoxLayout:
                        spacing: "25dp"
                        padding: [0]
                        MDCard:
                            elevation: 12
                            RelativeLayout:
                                FitImage:
                                    source: root.image
                                AnchorLayout:
                                    anchor_x: 'left'
                                    anchor_y: 'top'
                                    MDIconButton:
                                        icon: "arrow-left"
                                        theme_text_color: "Custom"
                                        text_color: 'white'
                                        on_press: app.switch_home()
                                        ripple_behavior: True
                                
                                AnchorLayout:
                                    anchor_x: 'right'
                                    anchor_y: 'top'
                                    MDIconButton:
                                        icon: "bookmark"
                                        theme_text_color: "Custom"
                                        text_color: 'white'
                                        on_press: app.bookmark(root.key)
                                        ripple_behavior: True

                                AnchorLayout:
                                    anchor_x: 'right'
                                    anchor_y: 'bottom'
                                    padding: [0,0,20,20]
                                    MDLabel:
                                        text: root.price
                                        color: 'white'
                                        font_size: '23dp'
                                        size_hint: None, None
                                        adaptive_size: True
                                        bold: True
                                    
                # MDBoxLayout:
                #     padding: [15,20,0,0]
                #     size_hint_y: None
                #     adaptive_height: True
                #     MDLabel:
                #         font_size: '23dp'
                #         text: 'Details:'
                #         adaptive_height: True
                        
                #         bold: True
                
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "15dp"
                    size_hint_y: None
                    adaptive_height: True
                    padding: [20,15,0,0]
                    
                    MDLabel:
                        text: root.type
                        size_hint_y: None
                        adaptive_height: True
                        font_size: "20dp"
                        color: "black"
                        bold: True
                        
                    MDBoxLayout:
                        size_hint_y: None
                        adaptive_height: True
                        
                        MDIcon:
                            icon: 'google-maps'
                            size_hint: None, None
                            adaptive_size: True
                            font_size: '18dp'
                            
                        MDLabel:
                            id: count
                            text: root.country + " " + root.town + " " + root.street
                            font_size: "13dp"
                            color: "gray"
                            size_hint_y: None
                            adaptive_height: True
                            
                        # MDLabel:
                        #     text: root.town + " "
                        #     font_size: "13dp"
                        #     color: "gray"
                        #     size_hint: None, None
                        #     adaptive_size: True
                            
                        # MDLabel:
                        #     text: root.street
                        #     font_size: "13dp"
                        #     color: 'gray'
                        #     size_hint: None, None
                        #     adaptive_size: True
                        #     height: count.height
                            

                    MDBoxLayout:
                        size_hint_y: None
                        adaptive_height: True
                        MDCard:
                            size_hint: None, None
                            width: 100
                            height: 30
                            radius: [10,]
                            on_press: app.open_maps(root.country + ',' + " " + root.town + ',' + " " + root.street)
                            ripple_behavior: True
                            MDIcon:
                                icon: 'google-maps'
                                size_hint_x: None
                                width: 20
                                font_size: '18dp'
                                
                            MDLabel:
                                text: 'google maps'
                                font_size: '12dp'
                                
                            
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "10dp"
                    padding: [20,5,10,0]
                    MDCard:
                        size_hint_y: None
                        height: 50
                        radius: [10,]
                        MDLabel:
                            halign: 'center'
                            text: root.bedrooms + " " + 'bedrooms'
                            font_size: '12dp'
                    MDCard:
                        size_hint_y: None
                        height: 50
                        radius: [10,]
                        MDLabel:
                            halign: 'center'
                            text: root.bathrooms + " " + 'bathrooms'
                            font_size: '12dp'
                    MDCard:
                        size_hint_y: None
                        height: 50
                        radius: [10,]
                        MDLabel:
                            halign: 'center'
                            text: root.landspace + " " + 'landspace'
                            font_size: '12dp'

                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    orientation: 'vertical'
                    padding: [20,15,0,0]
                    spacing: "20dp"
                    MDLabel:
                        text: 'Description'
                        size_hint_y: None
                        adaptive_height: True
                        font_size: "20dp"
                        color: "black"
                        bold: True
                    MDLabel:
                        text: root.description
                        size_hint_y: None
                        adaptive_height: True
                        font_size: '13dp'
                        color: 'gray'
                
                        
                # MDCard:
                #     md_bg_color: app.theme_cls.primary_color
                #     radius: [5,0,0,0]
                #     ripple_behavior: True
                #     on_release: app.send_email(root.email)
                #     MDLabel:
                #         text: "Buy"
                #         halign: "center"
                #         color: "white"
                #         font_size: "13sp"
                #         bold: True

                
        MDBoxLayout:
            
            size_hint_y: None
            height: 70
            padding: [10,]
            MDCard:
                md_bg_color: app.theme_cls.primary_color
                radius: [5,]
                ripple_behavior: True
                
                on_release: app.send_email(root.email, root.phonenumber)
                
                MDLabel:
                    text: "Buy"
                    halign: "center"
                    color: "white"
                    font_size: "13sp"
                    bold: True
                    

<DetailsScreen>:
    
    MDBoxLayout:
        orientation: 'vertical'
        
        ScrollView:
            effect_cls: 'ScrollEffect'
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "25dp"
                adaptive_height: True
                size_hint_y: None
                MDBoxLayout:
                    
                    size_hint_y: None
                    height: Window.size[1] / 2
                    padding: [0]
                    
                    ImageCard:
                        padding: [0]
                        on_press: house_image.allow_stretch=True
                        RelativeLayout:
                            FitImage:
                                source: root.image
                                id: house_image
                                
                            AnchorLayout:
                                anchor_x: 'left'
                                anchor_y: 'top'
                                MDIconButton:
                                    icon: "arrow-left"
                                    theme_text_color: "Custom"
                                    text_color: 'white'
                                    on_press: app.switch_home()
                                    ripple_behavior: True
                            
                            AnchorLayout:
                                anchor_x: 'right'
                                anchor_y: 'top'
                                MDIconButton:
                                    icon: "bookmark"
                                    theme_text_color: "Custom"
                                    text_color: 'white'
                                    on_press: app.bookmark(root.key)
                                    ripple_behavior: True

                            AnchorLayout:
                                anchor_x: 'right'
                                anchor_y: 'bottom'
                                padding: [0,0,20,20]
                                MDLabel:
                                    text: root.price
                                    color: 'white'
                                    font_size: '23dp'
                                    size_hint: None, None
                                    adaptive_size: True
                                    bold: True
                                    
                # MDBoxLayout:
                #     padding: [15,20,0,0]
                #     size_hint_y: None
                #     adaptive_height: True
                #     MDLabel:
                #         font_size: '23dp'
                #         text: 'Details:'
                #         adaptive_height: True
                        
                #         bold: True
                
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "15dp"
                    size_hint_y: None
                    adaptive_height: True
                    padding: [20,15,0,0]
                    
                    MDLabel:
                        text: root.type
                        size_hint_y: None
                        adaptive_height: True
                        font_size: "20dp"
                        color: "black"
                        bold: True
                        
                    MDBoxLayout:
                        size_hint_y: None
                        adaptive_height: True
                        
                        MDIcon:
                            icon: 'google-maps'
                            size_hint: None, None
                            adaptive_size: True
                            font_size: '18dp'
                            pos_hint: {'center_y': 0.5}
                            
                        MDLabel:
                            id: count
                            text: root.country + " " + root.province + " " + root.town + " " + root.street
                            font_size: "15dp"
                            color: "gray"
                            size_hint_y: None
                            adaptive_height: True
                            
                        # MDLabel:
                        #     text: root.town + " "
                        #     font_size: "13dp"
                        #     color: "gray"
                        #     size_hint: None, None
                        #     adaptive_size: True
                            
                        # MDLabel:
                        #     text: root.street
                        #     font_size: "13dp"
                        #     color: 'gray'
                        #     size_hint: None, None
                        #     adaptive_size: True
                        #     height: count.height
                            

                    MDBoxLayout:
                        size_hint_y: None
                        adaptive_height: True
                        MDCard:
                            size_hint: None, None
                            adaptive_width: True
                            height: bedrooms.height + 25
                            radius: [10,]
                            on_press: app.open_maps(root.country + ',' + " " + root.province + ',' + " " + root.town + ',' + " " + root.street)
                            ripple_behavior: True
                            
                            
                            MDIcon:
                                icon: 'google-maps'
                                size_hint: None, None
                                adaptive_size: True
                                font_size: '18dp'
                                id: gmaps_icon
                                md_bg_color: 1,0,1,1
                                    
                            MDLabel:
                                text: 'google maps'
                                font_size: '17dp'
                                size_hint_x: None
                                adaptive_width: True
                                id: gmaps_label
                                md_bg_color: 1,0,0,1
                            
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    spacing: "10dp"
                    padding: [20,5,10,0]
                    BedroomsCard:
                        size_hint_y: None
                        height: landspace.height + 25
                        radius: [10,]
                        padding: [5,]
                        MDLabel:
                            halign: 'center'
                            text: root.bedrooms + " " + 'bedrooms'
                            font_size: '15dp'
                            id: bedrooms
                            size_hint_y: None
                            adaptive_height: True
                            valign: 'center'
                            halign: 'center'
                            md_bg_color: 1,0,0,1
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    BathroomsCard:
                        size_hint_y: None
                        height: landspace.height + 25
                        radius: [10,]
                        padding: [5]
                        MDLabel:
                            halign: 'center'
                            text: root.bathrooms + " " + 'bathrooms'
                            font_size: '15dp'
                            id: bathrooms
                            size_hint_y: None
                            adaptive_height: True
                            valign: 'center'
                            halign: 'center'
                            md_bg_color: 0,1,0,1
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    LandspaceCard:
                        size_hint_y: None
                        height: landspace.height + 25
                        radius: [10,]
                        padding: [5]
                        MDLabel:
                            halign: 'center'
                            text: root.landspace + " " + 'landspace'
                            font_size: '15dp'
                            size_hint_y: None
                            adaptive_height: True
                            id: landspace
                            valign: 'center'
                            halign: 'center'
                            md_bg_color: 0,0,1,1
                            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                    orientation: 'vertical'
                    padding: [20,15,0,0]
                    spacing: "20dp"
                    MDLabel:
                        text: 'Description'
                        size_hint_y: None
                        adaptive_height: True
                        font_size: "20dp"
                        color: "black"
                        bold: True
                    MDLabel:
                        text: root.description
                        size_hint_y: None
                        adaptive_height: True
                        font_size: '13dp'
                        color: 'gray'
                MDBoxLayout:
                    padding: [20]
                    size_hint_y: None
                    height: 300
                    MDCard:
                        radius: [10]
                        padding: [10,]
                        elevation: 0
                        orientation: 'vertical'
                        MDLabel:
                            text: 'Further Amenities'
                            halign: 'center'
                            font_size: '20dp'
                            bold: True
                            size_hint_y: .7
                        MDBoxLayout:
                            orientation: 'vertical'
                            
                            MDGridLayout:
                                spacing: "20dp"
                                cols: 2
                                MDLabel:
                                    text: 'Fans'
                                    font_size: '14sp'
                                MDLabel:
                                    text: root.amenities[0]


                                MDLabel:
                                    text: 'Air Conditioner'
                                    font_size: '14sp'
                                MDLabel:
                                    text: root.amenities[1]
                                

                                MDLabel:
                                    text: 'Water Heater' 
                                    font_size: '14sp'
                                MDLabel:
                                    text: root.amenities[2]

                                MDLabel:
                                    text: 'Swimming Pool'
                                    font_size: '14sp'
                                MDLabel:
                                    text: root.amenities[3]


                                MDLabel:
                                    text: 'Wifi'
                                    font_size: '14sp'
                                MDLabel:
                                    text: root.amenities[4]

                                MDLabel:
                                    text: 'garage'
                                    font_size: '14sp'
                                MDLabel:
                                    text: root.amenities[5]


                
                        
                # MDCard:
                #     md_bg_color: app.theme_cls.primary_color
                #     radius: [5,0,0,0]
                #     ripple_behavior: True
                #     on_release: app.send_email(root.email)
                #     MDLabel:
                #         text: "Buy"
                #         halign: "center"
                #         color: "white"
                #         font_size: "13sp"
                #         bold: True

                
        MDBoxLayout:
            
            size_hint_y: None
            height: 70
            padding: [10,]
            MDCard:
                md_bg_color: app.theme_cls.primary_color
                radius: [5,]
                ripple_behavior: True
                
                on_release: app.send_email(root.email, root.phonenumber, root.telegram, root.facebook)
                
                MDLabel:
                    text: "Buy"
                    halign: "center"
                    color: "white"
                    font_size: "13sp"
                    bold: True
                    
            # MDCard:
            #     md_bg_color: app.theme_cls.primary_color
            #     radius: [5,0,0,0]
            #     ripple_behavior: True
            #     size_hint_x: .5
            #     on_release: app.send_email(root.email)
            #     MDLabel:
            #         text: "Buy"
            #         halign: "center"
            #         color: "white"
            #         font_size: "13sp"
            #         bold: True
                    

<Further@MDCard+CommonElevationBehavior>
<ImageCard@MDCard+CommonElevationBehavior>
<BedroomsCard@MDCard+CommonElevationBehavior>
<BathroomsCard@MDCard+CommonElevationBehavior>
<LandspaceCard@MDCard+CommonElevationBehavior>

<HomeCards>:
    
    
    
    
    padding: [0]
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    height: Window.size[1] / 2 if Window.size[1] > Window.size[0] else Window.size[1] / 1.1
    width: Window.size[0] / 1.1 if Window.size[0] < Window.size[1] else Window.size[0] / 2 
    
    id: home_card
    radius: ["5dp", ]
    RelativeLayout:
        MDBoxLayout:
            orientation: 'vertical'
            padding: ["10dp",]
            spacing: "20dp"
            Pico:
                id: pico
                
                on_press: app.play()
                on_press: app.switch_details(root.image, root.tot, root.price, root.country, root.province, root.town, root.street, root.bedrooms, root.bathrooms, root.landspace, root.email, root.phonenumber, root.twitter, root.facebook, root.description, root.key, root.amenities)
                radius: [5,]
                ripple_behavior: True
                on_release: app.call_guy(root.key, root.price)
                RelativeLayout:
                    FitImage:
                        source: str(root.image)
                        radius: [5, ]
                        keep_ratio: False
                        allow_stretch: True

                    
                    # MDBoxLayout:
                    #     size_hint: None, None
                    #     adaptive_size: True
                    #     md_bg_color: 1,1,1,1
                    #     padding: [10]
                        
                    MDLabel:
                        text: root.price
                        halign: 'center'
                        font_size: "14dp"
                        md_bg_color: 1,1,1,1
                        font_color: "black"
                        bold: True
                        size_hint_y: None
                        height: dp(30)
                        size_hint_max_x: dp(100)
                        pos_hint: {'center_x': 0.75, 'center_y': 0.89}
                            
                            
                    
                        
                            

            
                
                
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "15dp"
                padding: ["15dp", "0dp", "5dp", "0dp"]
                size_hint_y: None
                adaptive_height: True
                MDLabel:
                    text: root.tot
                    bold: True
                    size_hint_y: None
                    adaptive_height: True
                    font_size: '16dp'
                    
                
                
                MDLabel:
                    text: root.country + ',' + ' ' + root.province + ',' + ' ' + root.town + ',' + ' ' + root.street
                    color: "gray"
                    font_size: "14dp"
                    size_hint_y: None
                    adaptive_height: True
                    markup: True
                    shorten: True
                    ellipsis_options: {'color':(0,0,0,0.5), 'underline':False}
                        
                        
                    
                        

            MDSeparator:

            MDBoxLayout:
                padding: ["10dp", "5dp", "0dp", "17dp"]
                size_hint_y: None
                adaptive_height: True
                
                MDLabel:
                    text: root.bedrooms + '\n [b]bedrooms[/b]'
                    font_size: "14dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                    markup: True
                    
                # MDBoxLayout:
                #     orientation: 'vertical'
                #     spacing: "6dp"
                #     size_hint_y: None
                #     adaptive_height: True
                MDLabel:
                    text: root.bathrooms + '\n [b]bathrooms[/b]'
                    font_size: "14dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                    markup: True
                    # MDLabel:
                    #     text: "bathrooms"
                    #     color: "black"
                    #     font_size: "13dp"
                    #     bold: True
                    #     halign: 'center'
                    #     size_hint_y: None
                    #     adaptive_height: True
                
                MDLabel:
                    text: root.landspace + '\n [b]Land space[/b]'
                    font_size: "14dp"
                    bold: True
                    halign: 'center'
                    size_hint_y: None
                    adaptive_height: True
                    markup: True
                    # MDLabel:
                    #     text: "Land space"
                    #     color: "black"
                    #     font_size: "14dp"
                    #     bold: True
                    #     halign: 'center'
                    #     size_hint_y: None
                    #     adaptive_height: True
        MDIconButton:
            icon: 'bookmark'
            theme_text_color: "Custom"
            text_color: 'black'
            on_press: app.bookmark(root.key)
            # on_release: self.icon='bookmark' if self.icon == 'bookmark-outline' else self.icon ='bookmark'
            pos_hint: {'center_x': 0.1, 'center_y': 1}
            icon_size: "20dp"
            id: bookmark_icon
            

<Pico@MDCard+CommonElevationBehavior>
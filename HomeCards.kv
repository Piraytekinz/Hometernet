<HomeCards>:
    
    
    
    
    
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    height: Window.size[1] / 1.96 if Window.size[1] > Window.size[0] else Window.size[1] / 1.1
    width: Window.size[0] / 1.05 if Window.size[0] < Window.size[1] else Window.size[0] / 2.1
    on_press: app.play()
    on_release: app.switch_details(root.image, root.tot, root.price, root.country, root.province, root.town, root.street, root.bedrooms, root.bathrooms, root.landspace, root.email, root.phonenumber, root.twitter, root.facebook, root.description, root.key, root.amenities, root.link, root.me)
    on_release: 
        app.call_guy(root.key, root.price)
        app.check_in_bk(root.key)
    id: home_card
    ripple_behavior: True
    radius: ['5dp']
    orientation: 'vertical'
    padding: ['0dp', '0dp', '0dp', '10dp']
    spacing: "20dp"
    line_color: 0.9,0.9,0.9,0.5
 
        
        
            
 
    FitImage:
        source: str(root.image)
        # source: '3d-house.jpg'
        radius: ['5dp', '5dp', 0, 0]
        


        
        
        

        

    
    Label:
        text: root.tot
        # text: 'Modern House'
        bold: True
        size_hint_y: None
        height: self.texture_size[1]
        font_size: '16dp'
        color: "black"
        text_size: self.size
        # padding: ["25dp","0dp","25dp","0dp"]
        padding_x: "25dp"
    
    
    Label:
        text: root.country + ',' + ' ' + root.province + ',' + ' ' + root.town + ',' + ' ' + root.street
        # text: 'Japan Kagoshima Kyushu Kyushu island'
        color: "gray"
        font_size: "14dp"
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.size
        markup: True
        shorten: True
        ellipsis_options: {'color':(0,0,0,0.5), 'underline':False}
        padding_x: "25dp"
                
                
            
                

    
        


    MDLabel:
        text: root.bedrooms + ' rooms' + ' - ' + root.bathrooms + ' baths' + ' - ' + root.landspace 
        
        font_size: '14dp'
   
        size_hint_y: None
        height: self.texture_size[1]
        color: "gray"
        # bold: True
        padding_x: "25dp"

    MDSeparator:
        padding: ['15dp', '0dp', '15dp', '0dp']
        pos_hint: {'center_x': 0.5}

    MDLabel:
        text: root.price
        
        font_size: "20dp"
        
        color: "black"
        bold: True
        size_hint_y: None
        padding_x: "25dp"
 
        height: dp(40)
        
        
        
            

        
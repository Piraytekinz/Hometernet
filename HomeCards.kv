<HomeCards>:
    
    
    
    
    
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: None, None
    height: Window.size[1] / 1.8 if Window.size[1] > Window.size[0] else Window.size[1] / 1
    width: Window.size[0] / 1.09 if Window.size[0] < Window.size[1] else Window.size[0] / 2.2
    on_press: app.play()
    on_release: app.switch_details(root.image, root.tot, root.price, root.country, root.province, root.town, root.street, root.bedrooms, root.bathrooms, root.landspace, root.email, root.phonenumber, root.twitter, root.facebook, root.description, root.key, root.amenities, root.link, root.me, root.checkin, root.checkout)
    on_release: 
        app.call_guy(root.key, root.price)
        app.check_in_bk(root.key)
    id: home_card
    ripple_behavior: True
    radius: ['5dp']
    orientation: 'vertical'
    padding: ['0dp', '0dp', '0dp', '10dp']
    spacing: "20dp"
    line_color: 0.9,0.9,0.9,0.5
    background_color: 1,1,1,1
    
    # canvas.before:
    #     Color:
    #         rgba: (1,0,1,1)
    #     RoundedRectangle:
    #         size: self.size
    #         pos: self.pos
    #         radius: [dp(10),]
        
        
            
 
    FitImage:
        source: str(root.image)
        # radius: ['5dp', '5dp', 0, 0]
        radius: [dp(10)]
        size_hint_y: None
        height: Window.size[1] / (1.7*2) if Window.size[1] > Window.size[0] else Window.size[1] / (1.4)
        


        
        
        

        

    
    MDLabel:
        text: f"\n[color=#000000][b][size=16dp]{root.tot}[/size][/b][/color] \n \n[color=#9A9A9A][size=14dp]{root.country} {root.province} {root.town} {root.street} \n \n{root.bedrooms} rooms {root.bathrooms} baths {root.landspace}[/size][/color] \n \n[color=#000000][b]{root.price}[/b][/color]"
        # bold: True
        size_hint_y: None
        height: '120dp'
        font_size: '16dp'
        color: "black"
        
        padding_x: "10dp"
        markup: True
    
    
    
    
<HomeCards>:
    elevation: 2
    
    
    padding: [0]
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint_x: None
    width: 695
    
    id: home_card
    radius: [5, ]
    RelativeLayout:
        MDBoxLayout:
            orientation: 'vertical'
            padding: [10,]
            spacing: "20dp"
            Main:
                
                
                elevation: 2
                on_press: app.switch_details(root.image, root.tot, root.price, root.country, root.town, root.street, root.bedrooms, root.bathrooms, root.landspace, root.email, root.phonenumber, root.telegram, root.facebook, root.description, root.key, root.amenities)
                radius: [5,]
                ripple_behavior: True
                
                RelativeLayout:
                    FitImage:
                        source: root.image
                        radius: [5, ]

                    
                    MDBoxLayout:
                        size_hint: None, None
                        adaptive_size: True
                        md_bg_color: 1,1,1,1
                        padding: [10]
                        pos_hint: {'center_x': 0.75, 'center_y': 0.89}
                        MDLabel:
                            text: root.price
                            halign: 'center'
                            font_size: "14dp"
                            md_bg_color: 1,1,1,1
                            font_color: "black"
                            bold: True
                            size_hint: None, None
                            adaptive_size: True
                            
                            
                    
                        
                            

            
                
                
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "15dp"
                padding: [10, 0, 5, 0]
                size_hint_y: None
                adaptive_height: True
                MDLabel:
                    text: root.tot
                    bold: True
                    size_hint_y: None
                    adaptive_height: True
                    font_size: '16dp'
                    
                MDBoxLayout:
                    size_hint_y: None
                    adaptive_height: True
                
                    MDLabel:
                        text: root.country + ',' + ' ' + root.town + ',' + ' ' + root.street
                        color: "gray"
                        font_size: "14dp"
                        size_hint_y: None
                        adaptive_height: True
                        
                        
                    
                        

            MDSeparator:

            MDBoxLayout:
                padding: [10, 5, 0, 17]
                size_hint_y: None
                adaptive_height: True
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "6dp"
                    size_hint_y: None
                    adaptive_height: True
                    MDLabel:
                        text: root.bedrooms
                        font_size: "14dp"
                        bold: True
                        halign: 'center'
                        size_hint_y: None
                        adaptive_height: True
                    MDLabel:
                        text: "bedrooms"
                        color: "black"
                        font_size: "14dp"
                        bold: True
                        halign: 'center'
                        size_hint_y: None
                        adaptive_height: True
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "6dp"
                    size_hint_y: None
                    adaptive_height: True
                    MDLabel:
                        text: root.bathrooms
                        font_size: "14dp"
                        bold: True
                        halign: 'center'
                        size_hint_y: None
                        adaptive_height: True
                    MDLabel:
                        text: "bathrooms"
                        color: "black"
                        font_size: "13dp"
                        bold: True
                        halign: 'center'
                        size_hint_y: None
                        adaptive_height: True
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: "6dp"
                    size_hint_y: None
                    adaptive_height: True
                    MDLabel:
                        text: root.landspace
                        font_size: "14dp"
                        bold: True
                        halign: 'center'
                        size_hint_y: None
                        adaptive_height: True
                    MDLabel:
                        text: "Land space"
                        color: "black"
                        font_size: "14dp"
                        bold: True
                        halign: 'center'
                        size_hint_y: None
                        adaptive_height: True
        MDIconButton:
            icon: 'bookmark'
            theme_text_color: "Custom"
            text_color: 'black'
            # on_press: app.bookmark(root.key)
            font_size: '15dp'
            user_font_size: '15dp'
            pos_hint: {'center_x': 0.1, 'center_y': 1}
            size_hint: None, None

<Main@MDCard+CommonElevationBehavior>